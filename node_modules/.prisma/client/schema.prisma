generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Post Model 생성
model Post {
  id           Int      @id @default(autoincrement())
  postTitle    String
  postContnet  String
  postStatus   String
  postCreateAt DateTime @default(now())

  @@map("tbl_post")
}

model Member {

  // pk
  id             Int      @id @default(autoincrement())
  memberEmail    String   @unique
  memberPassword String
  memberName     String
  memberAge      Int
  memberCreateAt DateTime @default(now())

  // 테이블 이름 매핑
  @@map("tbl_member")
}
